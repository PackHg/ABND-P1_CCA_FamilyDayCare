<resources>

    <!-- Base application theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- No Action Bar and Title -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Photo style -->
    <style name="PhotoStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/photo_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Image icon style -->
    <style name="IconStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Information text style -->
    <style name="InfoTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

</resources>
